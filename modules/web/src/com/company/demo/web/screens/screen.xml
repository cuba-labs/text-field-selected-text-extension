<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.demo.web.screens.Screen"
        messagesPack="com.company.demo.web.screens">
    <dialogMode height="600"
                width="800"/>
    <layout>
        <grid spacing="true">
            <columns count="2"/>
            <rows>
                <row>
                    <textField id="textField1"
                               caption="GWT Extension"/>
                    <button align="BOTTOM_LEFT"
                            caption="Show Selected Text"
                            invoke="showSelectedText1"/>
                </row>
                <row>
                    <textField id="textField2"
                               caption="JavaScript Extension"/>
                    <button align="BOTTOM_LEFT"
                            caption="Show Selected Text"
                            invoke="showSelectedText2"/>
                </row>
            </rows>
        </grid>
    </layout>
</window>
